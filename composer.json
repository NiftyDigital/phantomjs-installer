{
    "name": "NiftyDigital/phantomjs-installer",
    "description": "A Composer package which installs the PhantomJS binary (Linux, Windows, Mac) into `/bin` of your project.",
    "type": "custom-installer",
    "keywords": ["phantomjs", "headless", "binaries"],
    "license": "MIT",
    "authors": [
        {
            "name": "Jens-Andr√© Koch",
            "email": "jakoch@web.de"
        },
        {
            "name": "Jack Price",
            "email": "jack@wearenifty.co.uk"
        }
    ],
    "require": {
        "ext-openssl": "*"
    },
    "replace": {
        "jakoch/phantomjs-isntaller": "*"
    },
    "autoload": {
        "psr-0": {
            "PhantomInstaller\\": "src/"
        },
        "classmap": ["src/PhantomInstaller\\Installer.php"]
    }
}
